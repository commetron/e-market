@using EMarket.Core.Application.ViewModels.Categories;
@model SaveCategoryViewModel
@{
    ViewData["Title"] = "Delete Category";
}

<div class="row justify-content-center">
    <div class="col-4">
        <div class="card shadow-sm">
            <div class="card-header bg-dark text-light">
                <h4>Are you sure you want to delete the category @Model.Name?</h4>
            </div>
            <div class="card-body">
                <form method="post" asp-controller="Category" asp-action="DeletePost">

                    <input type="hidden" asp-for="Id" />

                    <div class="container-fluid text-center">
                        <button type="submit" class="btn btn-danger shadow-sm">Delete</button>
                        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary shadow-sm">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>