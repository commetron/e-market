@using EMarket.Core.Application.ViewModels.User;
@model SaveUserViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="row justify-content-center mt-5">
    <div class="col-5">
        <div class="card">
            <div class="card-header bg-primary">
                <h5 class="text-white mt-2">Register a new user</h5>
            </div>
            <div class="card-body">
                <form method="post" asp-controller="User" asp-action="Register">
                    <div class="row form-group mb-3">
                        <div class="col">
                            <label asp-for="Name" class="form-label"><strong>Name:</strong></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <label asp-for="Username" class="form-label"><strong>Username:</strong></label>
                            <input asp-for="Username" class="form-control" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row form-group mb-3">
                        <div class="col">
                            <label asp-for="Password" class="form-label"><strong>Password:</strong></label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <label asp-for="ConfirmPassword" class="form-label"><strong>Confirm Password:</strong></label>
                            <input asp-for="ConfirmPassword" class="form-control" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row form-group mb-3">
                        <div class="col">
                            <label asp-for="Phone" class="form-label"><strong>Phone:</strong></label>
                            <input asp-for="Phone" class="form-control" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                        <div class="col">
                            <label asp-for="Email" class="form-label"><strong>Email:</strong></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="text-center mt-4">
                        <a asp-controller="User" asp-action="Index" class="btn btn-secondary">Back</a>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
